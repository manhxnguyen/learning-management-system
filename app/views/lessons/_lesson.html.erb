<div id="<%= dom_id lesson %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= lesson.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= lesson.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Paid:</strong>
    <%= lesson.paid? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Course:</strong>
    <%= lesson.course_id %>
  </div>
</div>
